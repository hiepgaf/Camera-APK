<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/shutter_view" android:background="#000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/module_preview_overlay" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.apps.refocus.RefocusProgressView android:layout_gravity="center" android:id="@+id/refocus_progress" android:layout_width="100dp" android:layout_height="150dp"/>
        <TextView android:textSize="22sp" android:textColor="#ffffff" android:gravity="top|center_vertical|center_horizontal|center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/refocus_instructions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="44dp" android:layout_marginRight="16dp" android:text="@string/refocus_instructions" android:shadowColor="#000000" android:shadowDx="0" android:shadowDy="1" android:shadowRadius="2" android:textAlignment="center"/>
        <ImageView android:layout_gravity="center" android:id="@+id/refocus_success_indicator" android:layout_width="200dp" android:layout_height="wrap_content" android:src="@drawable/refocus_successful"/>
    </FrameLayout>
</FrameLayout>
